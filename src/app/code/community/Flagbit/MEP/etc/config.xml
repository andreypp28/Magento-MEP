<?xml version="1.0"?>
<config>
    <modules>
        <Flagbit_MEP>
            <version>0.2.5</version>
        </Flagbit_MEP>
    </modules>

    <global>
        <blocks>
            <mep>
                <class>Flagbit_MEP_Block</class>
            </mep>
        </blocks>

        <helpers>
            <mep>
                <class>Flagbit_MEP_Helper</class>
            </mep>
        </helpers>
        <models>
            <mep>
                <class>Flagbit_MEP_Model</class>
                <resourceModel>mep_mysql4</resourceModel>
            </mep>

            <mep_mysql4>
                <class>Flagbit_MEP_Model_Mysql4</class>
                <entities>
                    <profil>
                        <table>mep_profile</table>
                    </profil>
                    <mapping>
                        <table>mep_profile_attribute</table>
                    </mapping>
                    <shipping>
                        <table>mep_shipping</table>
                    </shipping>
                    <shipping_attribute>
                        <table>mep_shipping_attribute</table>
                    </shipping_attribute>
                </entities>
            </mep_mysql4>
        </models>

        <resources>
            <mep_setup>
                <setup>
                    <module>Flagbit_MEP</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </mep_setup>
            <mep_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </mep_write>
            <mep_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </mep_read>
        </resources>

        <mep module="mep">
            <export_entities>
                <catalog_product translate="label">
                    <model_token>mep/export_entity_product</model_token>
                    <label>Products MEP</label>
                </catalog_product>
            </export_entities>
            <export_file_formats>
                <twig translate="label">
                    <model_token>mep/export_adapter_twig</model_token>
                    <label>CSV-Template</label>
                </twig>
            </export_file_formats>
        </mep>
    </global>


    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <mep before="Mage_Adminhtml">Flagbit_MEP_Adminhtml</mep>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <adminhtml>
        <layout>
            <updates>
                <mep>
                    <file>mep.xml</file>
                </mep>
            </updates>
        </layout>
    </adminhtml>
    <crontab>
        <jobs>
            <mep_profiles_enabled>
                <schedule>
                    <cron_expr>*/15 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>mep/observer::exportEnabledProfiles</model>
                </run>
            </mep_profiles_enabled>
        </jobs>
    </crontab>
</config>
