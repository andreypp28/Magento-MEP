<?xml version="1.0"?>
<layout>
    <default>
        <reference name="head">
            <action method="addItem"><type>js</type><name>mage/adminhtml/rules.js</name><params/></action>
            <action method="addItem"><type>skin_js</type><name>chosen/chosen.proto.js</name></action>
            <action method="addItem"><type>skin_js</type><name>mep.js</name></action>
            <action method="addCss"><name>chosen/chosen.css</name></action>
            <action method="addCss"><name>mep.css</name></action>
            <action method="setCanLoadExtJs"><flag>1</flag></action>
            <action method="addJs"><script>mage/adminhtml/wysiwyg/widget.js</script></action>
            <action method="addItem"><type>js</type><name>prototype/window.js</name></action>
            <action method="addItem"><type>js_css</type><name>prototype/windows/themes/default.css</name></action>
            <action method="addCss"><name>lib/prototype/windows/themes/magento.css</name></action>
        </reference>
    </default>

	<adminhtml_mep_index>
        <reference name="content">
            <block type="adminhtml/template" template="mep/form/before.phtml" name="mep.form.before" alias="form_before"/>
            <block type="mep/adminhtml_export_edit" name="mep.form.container"/>
            <block type="adminhtml/template" template="mep/form/after.phtml" name="mep.form.after" alias="form_after"/>
        </reference>
	</adminhtml_mep_index>


    <adminhtml_mep_getfilter>
        <block type="core/text_list" name="root">
            <block type="mep/adminhtml_export_filter" name="mep.filter"/>
        </block>
    </adminhtml_mep_getfilter>


    <adminhtml_profil_index>
        <reference name="content">
            <block type="mep/adminhtml_profil_view" name="mep.profil" />
        </reference>
    </adminhtml_profil_index>

    <adminhtml_profil_new>
        <reference name="content">
            <block type="mep/adminhtml_profil_view_new" name="profil_new"></block>
        </reference>
        <reference name="left">
            <block type="mep/adminhtml_profil_view_new_tabs" name="profil_tabs"></block>
        </reference>>

    </adminhtml_profil_new>

    <adminhtml_profil_attribute_index>

        <block type="core/text_list" name="root" output="toHtml">
            <block type="mep/adminhtml_profil_view_gridMapping" name="fields.grid"/>
            <block type="adminhtml/widget_grid_serializer" name="grid_serializer">
                <reference name="grid_serializer">
                    <action method="initSerializerBlock">
                        <grid_block_name>fields.grid</grid_block_name>
                        <data_callback>getSelectedCustomers</data_callback>
                        <hidden_input_name>links[customers]</hidden_input_name>
                        <reload_param_name>profile</reload_param_name>
                    </action>
                    <action method="addColumnInputName">
                        <input_name>position</input_name>
                    </action>
                </reference>
            </block>
        </block>
    </adminhtml_profil_attribute_index>

</layout>
